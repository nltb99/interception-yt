{
    "manifest_version": 2,
    "name": "youtube_blocker",
    "version": "0.1",
    "description": "Simple Youtube block unexpected contents",
    "permissions": [
        "contextMenus",
        "activeTab",
        "tabs",
        "storage"
    ],
    "icons": {
        "16": "icons/icon16x16.png",
        "48": "icons/icon48x48.png",
        "128": "icons/icon128x128.png"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "content_scripts": [
        {
            "matches": [
                "*://www.youtube.com/*"
            ],
            "js": [
                "assets/contentscript.js",
                "assets/libs/particles.js",
                "assets/libs/jquery.js",
                "assets/libs/bootstrap.js"
            ],
            "all_frames": true,
            "run_at": "document_start"
        }
    ],
    "background": {
        "scripts": [
            "assets/background.js"
        ],
        "persistent": false
    },
    "options_page": "assets/options/index.html",
    "browser_action": {
        "default_popup": "assets/popup/popup.html"
    }
}