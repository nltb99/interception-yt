{
    "manifest_version": 2,
    "name": "youtube_blocker",
    "version": "0.1",
    "description": "Simple Youtube block unexpected contents",
    "permissions": [
        "contextMenus",
        "activeTab",
        "tabs",
        "storage"
    ],
    "icons": {
        "16": "icons/icon16x16.png",
        "48": "icons/icon48x48.png",
        "128": "icons/icon128x128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.youtube.com/*"
            ],
            "js": [
                "assets/contentscript.js"
            ],
            "css": [
                "assets/style.css"
            ],
            "all_frames": true
        }
    ],
    "background": {
        "scripts": [
            "assets/background.js"
        ],
        "persistent": false
    },
    "options_page": "assets/index.html"
}